<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.massimoregoli.demoviewpager2">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemoViewPager2">
        <activity android:name=".fragments.FragmentViewPagerActivity"
            android:label="@string/title_fragment_slider"/>
        <activity
            android:name=".activities.ViewsSliderActivity"
            android:label="@string/title_activity_views_slider"
            android:theme="@style/AppTheme.FullScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>